{{> nav}}
<h1>PRODUCTOS</h1>
{{#if products}}

<table class="table">
   <thead>
      <tr>
         <th scope="col">Nombre</th>
         <th scope="col">Precio</th>
         <th scope="col">Imagen</th>
      </tr>
   </thead>
   <tbody>
   {{#each products}}
      <tr>
         <td>
            {{this.nombre}}
         </td>
         <td>
            ${{this.precio}}
         </td>
         <td>
            <img style="height: 50px; width: 50px;" src="{{this.url}}">
         </td>
      </tr>
   {{/each}}
   </tbody>
</table>
{{else}}
<p> No hay productos</p>

{{/if}}